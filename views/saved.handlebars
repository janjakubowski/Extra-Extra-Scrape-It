
{{> header home=false }}

{{#each articles}}

	{{#if saved}}

	<div class="container article" >

		<div class="row">

			<div class="col-md-1">
				<p>{{source}}</p>
			</div>
			<div class="col-md-9">
				<a href="{{link}}" target="_blank">
					{{headline}}
				</a>
			</div>
			<div class="col-md-1">
				<button class="note-it btn-primary btn" data-id="{{_id}}">
					Note
				</button>
			</div>
			<div class="col-md-1">
				<button class="delete-it btn-danger btn" data-id="{{_id}}">
					Delete
				</button>
			</div>

		</div>

	</div>
	{{/if}}

{{/each}}

{{> modals }}
  

